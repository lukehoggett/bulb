{
    "ecmaFeatures": {
        "modules": true,
        "spread": true,
        "restParams": true
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        "no-console": [2, { "allow": ["warn", "error"] }],
        "no-undef": "off",
        "semi": [2, "always"],
        "linebreak-style": ["error", "unix"],
        "quotes": [2, "single", {"avoidEscape": true, "allowTemplateLiterals": true}]
    },
    "parserOptions": {
        "sourceType": "module"
    }
}
