{
    "ecmaFeatures": {
        "modules": true,
        "spread": true,
        "restParams": true
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        "no-console": ["error", {
            "allow": ["warn", "error", "log", "info"]
        }],
        "no-undef": "off",
        "semi": [2, "always"],
        "linebreak-style": ["error", "unix"],
        "quotes": "off"
    },
    "parserOptions": {
        "sourceType": "module"
    }
}
